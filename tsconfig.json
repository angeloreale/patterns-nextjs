{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "paths": {
      "@styles": ["./src/app/styles"],
      "@styles/*": ["./src/app/styles/*"],
      "@model": ["./lib/model"],
      "@model/*": ["./lib/model/*"],
      "@auth": ["./lib/auth"],
      "@auth/*": ["./lib/auth/*"],
      "@state/*": ["./lib/state/*"],
      "@state": ["./lib/state"],
      "@actions/*": ["./lib/actions/*"],
      "@actions": ["./lib/actions"],
      "@decorators/*": ["./src/app/decorators/*"],
      "@decorators": ["./src/app/decorators"],
      "@components/*": ["./src/app/components/*"],
      "@components": ["./src/app/components"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
}
